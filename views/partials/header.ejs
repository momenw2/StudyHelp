<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Navigation Bar</title>
    <link rel="stylesheet" href="/headerStyle.css" />
  </head>
  <body>
    <header>
      <div class="container">
        <div class="logo">
          <a href="/"><img src="logo.png" alt="Logo" /></a>
        </div>
        <nav>
          <ul>
            <li><a href="#">About us</a></li>
            <li><a href="/countries">Explore universities</a></li>
          </ul>
        </nav>

        <div>
          <% if(user) { %>
          <div class="dropdown">
            <button class="dropbtn" id="dropdownButton">
              <%= user.fullName %>
              <img src="dropBtn.png" alt="" class="dropArrow" />
              <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content" id="myDropdown">
              <a href="/profilePage" class="dropDownLink">Profile</a>
              <a href="user/logout" class="dropDownLink">Logout</a>
            </div>
          </div>
          <% } else { %>
          <div class="login">
            <a href="/login">Login</a>
          </div>
          <% } %>
        </div>
      </div>
      <div class="gtranslate_wrapper"></div>
      <script>
        window.gtranslateSettings = {
          default_language: "en",
          detect_browser_language: true,
          languages: ["en", "fr", "de", "it", "es", "zh-CN", "ar"],
          wrapper_selector: ".gtranslate_wrapper",
        };

        function saveLanguagePreference(lang) {
          localStorage.setItem("preferredLanguage", lang);
        }

        function applyLanguagePreference() {
          const preferredLanguage = localStorage.getItem("preferredLanguage");
          if (preferredLanguage) {
            // Simulate a language change event for the translation widget
            window.gtranslateSettings.default_language = preferredLanguage;
            // Directly set the language
            const event = new Event("change");
            const selectElement = document.querySelector(
              ".gtranslate_wrapper select"
            );
            if (selectElement) {
              selectElement.value = preferredLanguage;
              selectElement.dispatchEvent(event);
            }
          }
        }

        document.addEventListener("DOMContentLoaded", () => {
          applyLanguagePreference();

          const languageSelector = document.querySelector(
            ".gtranslate_wrapper select"
          );
          if (languageSelector) {
            languageSelector.addEventListener("change", (event) => {
              const selectedLanguage = event.target.value;
              saveLanguagePreference(selectedLanguage);
            });
          }

          const dropdownButton = document.getElementById("dropdownButton");
          const myDropdown = document.getElementById("myDropdown");

          dropdownButton.addEventListener("click", () => {
            myDropdown.classList.toggle("show");
          });

          window.addEventListener("click", (e) => {
            if (
              !e.target.matches("#dropdownButton") &&
              !e.target.closest(".dropdown")
            ) {
              if (myDropdown.classList.contains("show")) {
                myDropdown.classList.remove("show");
              }
            }
          });
        });
      </script>
      <script
        src="https://cdn.gtranslate.net/widgets/latest/float.js"
        defer
      ></script>
    </header>
  </body>
</html>
